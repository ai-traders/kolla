FROM {{ namespace }}/{{ image_prefix }}base:{{ tag }}
LABEL maintainer="{{ maintainer }}" name="{{ image_name }}" build-date="{{ build_date }}"

{% block ceph_base_header %}{% endblock %}

{% import "macros.j2" as macros with context %}

{{ macros.configure_user(name='ceph') }}

{% if base_distro in ['centos', 'oraclelinux', 'rhel'] %}

   {% set ceph_base_packages = [
        'btrfs-progs',
        'ceph',
        'ceph-radosgw',
        'e2fsprogs',
        'hdparm',
        'parted',
        'xfsprogs'
    ] %}

    {% if base_arch in ['aarch64', 'x86_64'] %}
        {% set ceph_base_packages = ceph_base_packages + [
            'ceph-fuse'
        ] %}
    {% endif %}

{% elif base_distro in ['debian', 'ubuntu'] %}

   {% set ceph_base_packages = [
        'btrfs-tools',
        'ceph',
        'libjemalloc1',
        'e2fsprogs',
        'hdparm',
        'parted',
        'radosgw',
        'xfsprogs',
        'python-setuptools',
        'bc'
    ] %}

{% endif %}
{{ macros.install_packages(ceph_base_packages | customizable("packages")) }}

RUN ldd /usr/bin/ceph-osd | grep libjemalloc

RUN sed -i.save -e "s#udev_sync = 1#udev_sync = 0#" -e "s#udev_rules = 1#udev_rules = 0#" -e "s#use_lvmetad = 1#use_lvmetad = 0#" /etc/lvm/lvm.conf

COPY extend_start.sh /usr/local/bin/kolla_extend_start
RUN chmod 755 /usr/local/bin/kolla_extend_start

{% block ceph_base_footer %}{% endblock %}
